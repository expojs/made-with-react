<div class="card  card-tags">
  <div class="card-header d-flex">
    <i class="far fa-flag"></i>
    <h5>Tags</h5>
  </div>
  <div class="card-body">
    {{#get "tags" include="count.posts" order="count.posts desc"}}
      <ul class="tags-menu">
        {{#foreach tags}}
          <li>
            <a href="{{url}}">{{name}}</a>
            <p>{{count.posts}}</p>
          </li>
        {{/foreach}}
      </ul>
    {{/get}}
  </div>
</div>
